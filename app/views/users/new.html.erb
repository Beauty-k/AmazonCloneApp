
<div class="header-section">
    <%= image_tag 'logo.png', id: "a-logo" %>
</div>
<div class="sign-up-form">

    <div class="form">
        <%= form_with(model: @user, local: true, data: { turbo: false })  do |form|%>
        <%= render 'shared/error_messages' %>
            <h1 id = "f-h1">Create account</h1>
            <div class="label1">
                <%= form.label :name, 'your Name' %>
                <%= form.text_field :name, class: "input-area" %>
            </div>
            <div class="label1">
                <%= form.label :email, 'Mobile number or email' %>
                <%= form.text_field :email, class: "input-area" %>
            </div>

            <div class="label1">
                <%= form.label :password, 'Password' %>
                <%= form.password_field :password, class: "input-area" %>
            </div>

            <div class="label1">
                <%= form.label :password_confirmation, 'Re-enter password' %>
                <%= form.password_field :password_confirmation, class: "input-area" %>
            </div>
            
            <div class="submit-button">
                <%= form.submit "Continue", id: "submit-button" %>
            </div>

        <% end %>
    
        <div class="suggestion">
                    <%= link_to 'By continuing, you agree to Amazons Conditions of Use and Privacy Notice.', "#", id: "terms" %>
                    <br>
                    
                    <hr>
                    <div class="base">
                        <div id = "l1">Buying for work?</div>
                            <span id = "l2">Create a free business account</span>
                        </div>
                    </div>
                    <hr id="hr2">

            <div class="user">
            <div>Already have an account?</div> 
            <%= link_to 'Sign in', "#", id: "login" %>
            </div>
        </div>
    </div>

    <hr style="border-top:1px solid rgba(128, 128, 128, 0.32) ;">
    <br>
    <div class = "footer">
        <div class="f1">
            <%= link_to 'Conditions of Use', "#",class: "terms" %> 
            <%= link_to 'Privacy Notice', "#",class: "terms" %>
            <%= link_to 'Help', "#",class: "terms" %> 
        </div>

        <div class="f2">
            <span>Â© 1996-2025, Amazon.com, Inc. or its affiliates</span>
        </div>
    </div>
</div> 


