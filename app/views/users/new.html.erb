        padding: 0;
        font-family: Arial, Helvetica, sans-serif;
    }
    .sign-up-form{
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }
    .header{
        height: 50px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        
    }
    #a-logo{
        height: 50px;
        width: 180px;
        object-fit: cover;
        padding: 10px;
    }
    #input-box{
        height: 30px;
        width: 296px;
        border: 0.5px solid rgba(0, 0, 0, 0.495);
        border-radius: 5px;
    }
    .form{
        height: 520px;
        width: 320px;
        display: flex;
        flex-direction: column;
        border: 2px solid rgba(0, 0, 0, 0.144);
        border-radius: 6px;
        padding: 20px 28px;
    }

    #submit-button{
        text-decoration: none;
        height: 29px;
        width: 294px;
        color: black;
        background-color: rgb(255, 213, 0);
        border: 2px solid rgb(255, 213, 0);
        border-radius: 40px;
        margin-top: 5px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    #f-h1{
        font-size: 28px;
        font-weight: 500;
        margin-bottom: 20px;

    }
    #input-box{
        height: 30px;
        width: 296px;
        border: 0.5px solid rgba(0, 0, 0, 0.495);
        border-radius: 5px;
        margin-bottom: 10px;
    }

    #input-box:hover{
        border: 2px solid #007185;
    }
    #s-label{
        font-size: 14px;
        font-weight: 700;
        margin-bottom: 5px;
    }
    
