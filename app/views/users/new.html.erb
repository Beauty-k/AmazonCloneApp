        font-size: 12px;
        text-decoration: none;
        color: black;
        margin-top: 15px;
        margin-bottom: 20px;
    }
  
    .suggestion hr{
        width: 330px;
        opacity: 0.5;
        margin-top: 25px;
        margin-bottom: 15px;
    }
    
   #hr2{
        width: 330px;
        opacity: 0.5;
        margin-top: 25px;
        margin-bottom: 25px;
   }
    #btn2{
        text-decoration: none;
        color: black;
    }
   
    #l1{
        font-size: 14px;
        font-weight: 700;
        color: #0f1111;
        margin-bottom: 5px;
    }
    #l2{
        font-size: 14px;
        color: #007185;
    }
    .f1{
        text-decoration: none;
        margin-right: 20px;
        padding: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
        gap: 25px;
    }
    .terms{
        text-decoration: none;
        color: #007185;
        font-size: 12px;
    }
    .f2{
        margin-top: 12px;
        color: #565959;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
    }
    .user{
        display: flex;
        font-size: 14px;
    }
    #login{
        text-decoration: none;
        color: #007185;
    }
    .input-area{
        height: 30px;
        width: 310px;
        border: 0.5px solid rgba(0, 0, 0, 0.495);
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .label1{
        display: flex;
        flex-direction: column;
        font-size: 14px;
        color: #0f1111;
        font-weight: 700;
        margin-bottom: 5px;
    }
  
</style>

<div class="header">
    <%= image_tag 'logo.png', id: "a-logo" %>
</div>
<div class="sign-up-form">

    <div class="form">
        <%= form_with model: @customer, local: true do |form|%>
            <h1 id = "f-h1">Create account</h1>
            <div class="label1">
                <%= form.label :Name, 'your Name' %>
                <%= form.text_field :Name, class: "input-area" %>
            </div>
            <div class="label1">
                <%= form.label :email, 'Mobile number or email' %>
                <%= form.text_field :email, class: "input-area" %>
            </div>

            <div class="label1">
                <%= form.label :password, 'Password' %>
                <%= form.password_field :password, class: "input-area" %>
            </div>

            <div class="label1">
                <%= form.label :password_confirmation, 'Re-enter password' %>
                <%= form.password_field :password_confirmation, class: "input-area" %>
            </div>
            <div class="submit-button">
                <%= form.submit "Continue", id: "submit-button" %>
            </div>

        <% end %>
    
        <div class="suggestion">
                    <%= link_to 'By continuing, you agree to Amazons Conditions of Use and Privacy Notice.', "#", id: "terms" %>
                    <br>
                    
                    <hr>
                    <div class="base">
                        <div id = "l1">Buying for work?</div>
                            <span id = "l2">Create a free business account</span>
                        </div>
                    </div>
                    <hr id="hr2">

            <div class="user">
            <div>Already have an account?</div> 
            <%= link_to 'Sign in', login_path, id: "login" %>
            </div>
        </div>
    </div>

    <hr style="border-top:1px solid rgba(128, 128, 128, 0.32) ;">
    <br>
    <div class = "footer">
        <div class="f1">
            <%= link_to 'Conditions of Use', "#",class: "terms" %> 
            <%= link_to 'Privacy Notice', "#",class: "terms" %>
            <%= link_to 'Help', "#",class: "terms" %> 
        </div>

        <div class="f2">
            <span>Â© 1996-2025, Amazon.com, Inc. or its affiliates</span>
        </div>
    </div>
</div> 


