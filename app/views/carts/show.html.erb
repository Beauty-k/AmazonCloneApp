<h2>Your Cart</h2>
<% if @cart.cart_items.any? %>
  <ul>
    <% @cart.cart_items.each do |item| %>
      <li>
        <%= item.product.name%> - Quantity: <%= item.quantity%>
        <%= link_to 'Remove', cart_item_path(item), method: :delete, class: "rem-item-link" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>your cart is empty</p>
<% end %>